<div id="cat_idx_container"><h1> <%= @category.name.upcase %> </h1>


<ul>
  <% @rated_films.each do |film| %>
  <li><%= link_to film.name, film_path( film ) %></li>
      <li>Audience Rating: <%= film.user_avg %></li>
      <%end%>

    <%@non_rated_films.each do | film | %>
      <li><%= link_to film.name, film_path( film ) %></li>
    <% end %>
</ul>

<h2> What people are saying about films in <%=@category.name %></h2>
<% @reviews.each do |review| %>
  <% review.each do | review | %>
    <%= review.body %>
  <% end %>
<%end%>
</div>

