<h1> Create a new review </h1>

<span>
 <%= form_for @review, :url => { :action => "create" } do |f| %>

<p>
  <%= f.label :title %><br>
  <%= f.text_area :title %>
</p>
<p>
  <%= f.label :body %><br>
  <%= f.text_area :body %>
  <%=f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :film_id, value: @film.id %>
</p>

  <%= f.submit %>
<% end %>
</span>

